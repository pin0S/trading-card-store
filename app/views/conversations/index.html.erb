<div class="container">

    <h1>Inbox</h1>

    <div class=”ui list”>
        <div class=”item”>
            <% @conversations.each do |conversation| %>
                <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
                <% if conversation.sender_id == current_user.id %>
                    <% recipient = User.find(conversation.recipient_id) %>
                <% else %>
                    <% recipient = User.find(conversation.sender_id) %>
                <% end %>
                    <%= link_to recipient.username, conversation_messages_path(conversation)%> 

                <% end %>
            <% end %>
        </div>
    </div>
</div>


<div class="row">
  <div class="col-md-8">
    <ul class="list-group">
      <% @conversations.each do |conversation| %>
        <li class="list-group-item" data-conversation-id="<%= conversation.id %>">
          <%= link_to conversation.recipient.username, conversation_messages_path(conversation)%>
         
         
        </li>
      <% end %>
    </ul>
  </div>
</div>