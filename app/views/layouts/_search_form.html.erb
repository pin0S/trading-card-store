<form class="form-inline my-2 my-lg-0 s-form float-right">

<div>
  <%= sort_link(@q, :price, 'Price', default_order: :desc) %>
  <%= sort_link(@q, :created_at, 'Newest', default_order: :desc) %>
</div>

<%= search_form_for @q do |f| %>

  <%= f.label ""%>
  <%= f.search_field :title_or_description_cont, class: "form-control mr-sm-2" %>

  <%= f.submit 'Search', class: "btn btn-outline-success my-2 my-sm-0" %>
  <%= link_to "Reset Search", cards_path, class: "btn btn-outline-warning" %>
<% end %>