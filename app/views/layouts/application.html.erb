<!DOCTYPE html>
<html>
  <head>
    <title>Harcourt Collectors</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> 
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light nav">
      <%= link_to image_tag('logo.svg', :class => 'navbar-brand logo'), cards_path %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav links">
          <%= link_to 'Cards', cards_path, class: "nav-link" %>  
          <%= link_to 'Sell', new_card_path, class: "nav-link" %> 
          <% if user_signed_in? %>
            <%= link_to 'Account', account_path, class: "nav-link" %>
            <%= link_to 'Logout', destroy_user_session_path, 
          method: :delete, class: "nav-link" %>
            <%= link_to 'Inbox', conversations_path, class: "nav-link" %>
          <% else %>
            <%= link_to 'Login', new_user_session_path, class: "nav-link" %> 
            <%= link_to 'Sign Up', new_user_registration_path, class: "nav-link" %>
          <%end%>
        </div>
      </div>
  </nav>
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
    <!--<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p> -->
    <%= yield %>
  </body>
</html>
