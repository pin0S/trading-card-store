
<div class="acct-head">
    <%= image_tag "account_img.jpg"%>
    <h1>Hello <%= current_user.username %></h1>

        <ul>
        <li><a href="#purchased">Cards Bought</a></li>
        <li><a href="#selling">Cards Selling</a></li>
        <li><a href="#sold">Cards Sold</a></li>
    </ul>
    
</div>

    
<div class="acct-section">
    <a name="#selling"><h3>Items you're selling</h3></a>
</div>

<div class="container-fluid">
    <div class="row">
        <% @cards.each do |card| %>
            <% if card.seller_id == current_user.id %>
            <!--Grid column setup for cards -->
                <div class="card col-md-3 d-flex align-items-stretch">
                    <div class="card">
                        <%= link_to (image_tag(card.picture, :class => 'card-img-top') if card.picture.attached?), card_path(card) %> 

                        <div class="card-footer">                            
                            <p class="card-text"><small class="text-muted">Listed on <%= card.created_at.strftime("%d/%m/%Y") %></small></p>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
        <%= will_paginate @cards %>
    </div>
</div>
   
    
<div class="acct-section">
    <a name="sold"><h3>Items you've sold</h3></a>
</div>


<div class="container-fluid">
    <div class="row">
        <% @cards.each do |card| %>
            <% if card.seller_id == current_user.id && card.purchased == true %>
            <!--Grid column setup for cards -->
                <div class="card col-md-3 d-flex align-items-stretch">
                    <div class="card">
                        <%= link_to (image_tag(card.picture, :class => 'card-img-top') if card.picture.attached?), card_path(card) %> 

                        <div class="card-footer">
                            
                            <p class="card-text"><small class="text-muted">Listed on <%= card.created_at.strftime("%d/%m/%Y") %></small></p>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
        <%= will_paginate @cards %>
    </div>
</div>


<div class="acct-section">
    <a name="purchased"><h3>Items you're bought</h3></a>
</div>

<div class="container-fluid">
    <div class="row">
        <% @cards.each do |card| %>
            <% if card.buyer == current_user %>
            <!--Grid column setup for cards -->
                <div class="card col-md-3 d-flex align-items-stretch">
                    <div class="card">
                        <%= link_to (image_tag(card.picture, :class => 'card-img-top') if card.picture.attached?), card_path(card) %> 

                        <div class="card-footer">
                            
                            <p class="card-text"><small class="text-muted">Listed on <%= card.created_at.strftime("%d/%m/%Y") %></small></p>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
        <%= will_paginate @cards %>
    </div>
</div>
