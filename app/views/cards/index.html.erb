    <div>
        <h1 class="page-header text-center ">Hardcourt Collectors</h1><br>
        <% @cards.each_slice(3) do |cards| %>
            <!--Grid row setup for cards -->
            <div class="row">
                
                <% cards.each do |car| %>
                <!--Grid column setup for cards -->
                    <div class="col-md-4 mb-4 d-flex align-items-stretch">
                        <div class="card listing border-right border-bottom" style="width: 18rem;">
                            <%= image_tag(car.picture, :class => 'card-img-top') if car.picture.attached? %> 
                            <div class="card-body">
                                <h5 class="card-title"><%= car.title %></h5>
                                <p class="card-price"><%= number_to_currency(car.price) %></p>
                                <%= link_to 'View Card', card_path(car.id), class: "btn btn-primary" %>
                            </div>
                        </div>
                    </div>
                <%end%>
                
            </div>
        <%end%>
    </div>
