<h1>Sell Card</h1>


<form>
    <%= form_with scope: :card, url: cards_path, local: true do |form| %>
    
    <div class="form-row">
        <div class="col">
            <%= form.label :title %>
            <%= form.text_field :title, class: "form-control" %>
         </div>

        <div class="col">
            <%= form.label :description %>
            <%= form.text_area :description, class: "form-control" %>
        </div>

    <p>
        <%= form.label :price %>
        <%= form.number_field :price, step: 0.01 %>
    </p>

    <p>
        <%= form.label :condition %>
        <%= form.select(:condition, [['Graded', 'graded'], ['Brand New', 'brand_new'], ['Like New', 'like_new'], ['Used', 'used'], ['Not specified', 'not_specified']] ) %>
    </p>

    <p>
        <%= form.label :manufacturer %>
        <%= form.select(:manufacturer, [['Upper Deck', 'upper_deck'], ['Panini', 'panini'], ['Topps', 'topps'], ['Other', 'other']] ) %>
    </p>

    <p>
        <%= form.label :season_id %>
        <%= form.select(:season_id, @seasons.map{ |s| [s.years, s.id] }) %>
    </p>

    <p>
        <%= form.label :team_id %>
        <%= form.select(:team_id, @teams.order(team: :asc).map{ |t| [t.team, t.id] }) %>
    </p>

    <% form.hidden_field :user_id, value: current_user.id %>

    <p>
        <%= form.label :picture %>
        <%= form.file_field :picture, accept: 'image/png, image/jpg, image/jpeg' %>
    </p>

    
   
    <button type="button" class="btn btn-warning"><%= form.submit "Sell Card"%></button>

    <% end %>
    </div>
</form>
    