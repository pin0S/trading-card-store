<h1>Sell Card</h1>

<%= form_with scope: :card, url: cards_path, local: true do |form| %>
      
    <p>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </p>

    <p>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </p>

    <p>
        <%= form.label :price %>
        <%= form.number_field :price %>
    </p>

    <p>
        <%= form.label :condition %>
        <%= form.select :condition, Card::conditions %>
    </p>

    <p>
        <%= form.label :manufacturer %>
        <%= form.select :manufacturer, Card::manufacturers %>
    </p>

    <p>
        <%= form.label :season_id %>
        <%= form.select(:season_id, @seasons.map{ |s| [s.years, s.id] }) %>
    </p>

    <p>
        <%= form.label :team_id %>
        <%= form.select(:team_id, @teams.order(team: :asc).map{ |t| [t.team, t.id] }) %>
    </p>

    <% form.hidden_field :user_id, value: current_user.id %>

    <p>
        <%= form.label :picture %>
        <%= form.file_field :picture, accept: 'image/png, image/jpg, image/jpeg' %>
    </p>

    
   
    <button type="button" class="btn btn-warning"><%= form.submit "Sell Card"%></button>

<% end %>
    