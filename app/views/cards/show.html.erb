<img src="#" alt="placeholder for user image of card for sale">


<div class="gird-container">
    
    <%= @card.each do |attr| %>

    <%= image_tag attr.picture if attr.picture.attached? %>

        <h2 class="card-title"><%= attr.title %></h2> 
        <p class="card-description"><%= attr.description %></p>  
        <h3 class="card-price"><%= attr.price %></h3>
        <button>Buy Now PH</button>
        <button>Sell Similar PH</button>
        <p>Seller rating PH</p>

        <%= link_to 'Destroy', card_path(card),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

    <% end %>    

    <p>placeholder related products</p>
</div>

